{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Cricket GUI",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "gui.exe",
                "gui.c",
                "accounts.c",
                "teams.c",
                "match.c",
                "tournament.c",
                "history.c",
                "ui.c",
                "-I.",
                "-Llib/",
                "-Wall",
                "-Wextra",
                "-std=c99",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
